{
  "manifest_version": 3,
  "name": "ChatGPT Message Collapser",
  "version": "1.0.0",
  "description": "Collapse and expand ChatGPT messages with 3-line preview. Personal use extension.",
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
